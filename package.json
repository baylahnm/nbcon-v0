{
  "name": "nbcon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "validate:production": "tsx scripts/production-validation/run-all.ts",
    "validate:stripe": "tsx scripts/production-validation/stripe-webhook-test.ts",
    "validate:supabase": "tsx scripts/production-validation/supabase-audit.ts",
    "validate:cloudflare": "tsx scripts/production-validation/cloudflare-qa.ts",
    "dev": "pnpm --filter @nbcon/web dev",
    "build": "pnpm --filter @nbcon/web build",
    "start": "pnpm --filter @nbcon/web start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.mjs",
    "test:watch": "vitest --config vitest.config.mjs",
    "test:ui": "vitest --ui --config vitest.config.mjs",
    "coverage": "vitest run --coverage --config vitest.config.mjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "migrate": "supabase db push",
    "seed": "supabase db seed",
    "build:config": "pnpm --filter @nbcon/config build",
    "deploy:web": "pnpm build:config && pnpm --filter @nbcon/web build",
    "deploy:functions": "supabase functions deploy stripe-checkout stripe-webhook stripe-portal lifecycle-cron",
    "docs:generate": "typedoc --out docs/api ./packages",
    "version:patch": "pnpm version patch && git push --follow-tags",
    "version:minor": "pnpm version minor && git push --follow-tags",
    "version:major": "pnpm version major && git push --follow-tags"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.22.0",
    "@sentry/react": "^10.22.0",
    "@supabase/supabase-js": "^2.78.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "^15.0.0",
    "posthog-js": "^1.290.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.9.5",
    "stripe": "^19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/ui": "^4.0.6",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.39.0",
    "eslint-config-next": "^16.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
